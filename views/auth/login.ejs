<!DOCTYPE html>
<html lang="pl">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/styles/auth-layout.css">
    <title>Log in to Gatopedia</title>
    <link rel="icon" type="image/x-icon" href="/img/icon-paw.png">
</head>
<body>

    <img src="/img/gatopedia-logo.png" alt="logo" id="LogoImg">

<div id="Container">
    <h1>Log in</h1>
    <form>
        <label for="email">E-mail address:</label><br>
        <input type="email" name="email" required><br>
        <label for="passwd">Password:</label><br>
        <input type="password" name="password" required><br>
        <div id="Errors"></div>
        <button>Log in</button>
    </form>
    <a href="/">Forgot password?</a>
    <img src="/img/icon-paw.png" alt="cat paw">
    <a href="/auth/signup">Register</a>
</div>

<script src="/scripts/login.js"></script>

<div id="Back">
    <a href="/">
        Go back to the main page
    </a>
</div>


